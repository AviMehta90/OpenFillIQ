{
  "name": "openfilliq",
  "version": "0.1.0",
  "description": "Universal, intelligent form-filling browser extension with local-first architecture",
  "main": "index.js",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "build:firefox": "tsc && vite build --mode firefox",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check"
  },
  "keywords": [
    "browser-extension",
    "autofill",
    "form-filling",
    "privacy",
    "local-first"
  ],
  "author": "Avi Mehta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AviMehta90/openFillIQ.git"
  },
  "bugs": {
    "url": "https://github.com/AviMehta90/openFillIQ/issues"
  },
  "homepage": "https://github.com/AviMehta90/openFillIQ#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-static-copy": "^1.0.1",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  }
}
